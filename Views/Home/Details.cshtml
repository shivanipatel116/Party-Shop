@model myPartyShop.Models.partyTable

@{
    ViewBag.Title = "Details";
}

<h3>Details</h3>

<dl class="dl-horizontal">
    <dt>
        Decoration Name
    </dt>
    <dd>
        @Html.DisplayFor(p => p.partyDecorationName)
    </dd>
    <dt>
        Decoration Image
    </dt>
    <dd>
        <img src="@Html.DisplayFor(p => p.partyDecorationImage)" height="200px" width="200px" />
    </dd>
    <dt>
        Description
    </dt>
    <dd>
        @Html.DisplayFor(p => p.partyDecorationDescription)
    </dd>
    <dt>
        Price
    </dt>
    <dd>
        £@Html.DisplayFor(p => p.partyDecorationPrice)
    </dd>

</dl>
<p>
    @Html.ActionLink("Edit Record", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Delete Record", "Delete", new { id = Model.Id}) |
    @Html.ActionLink("Back to List", "Index")
</p>
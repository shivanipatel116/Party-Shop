@model IEnumerable<myPartyShop.Models.partyTable>

@{
    ViewBag.Title = "Index";
}

@*<h3>Party Decorations</h3>*@

<p>
    @Html.ActionLink("Create New Record", "Add")

    @using (Html.BeginForm())
    {
        <p>
            Party Theme: @Html.DropDownList("partyThemeType", "All")
            
            Title: @Html.TextBox("SearchString")
            &nbsp;
            <input type="submit" value="Filter" />
        </p>
    }
</p>
<br />
<table class="table">
    <tr>
        <th>
            Decoration Image
        </th>

        <th>
            Party Theme
        </th>

        <th>
            Decoration Name
        </th>
       
        <th>
            Price
        </th>
        <th>

        </th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>

            <td>
                <img src="@Html.DisplayFor(p => item.partyDecorationImage)" height="200px" width="200px" overflow="hidden" />
            </td>
            <td>
                @Html.DisplayFor(p => item.partyTheme)
            </td>
            <td>
                @Html.DisplayFor(p => item.partyDecorationName)
            </td>
            <td>
                £@Html.DisplayFor(p => item.partyDecorationPrice)
            </td>
            <td>
                @Html.ActionLink("Edit Record", "Edit", new { id = item.Id })
                <br />
                @Html.ActionLink("Details of Record", "Details", new { id = item.Id })
                
            </td>
         </tr>
    }
    

</table>

